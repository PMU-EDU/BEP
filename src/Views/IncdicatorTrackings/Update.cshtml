@model IEnumerable<BES.Models.Data.IncdicatorTracking>

@{
    ViewData["Title"] = "Update";
}

<h2>Update</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IndicatorName)
            </th>

            <th>
                @Html.DisplayName("Evidence/Done")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfUpload)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.isEvidence)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {


            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.IndicatorName)
                </td>

                <td>
                    @{ 

                        if (item.IsUpload == true)
                        { @Html.DisplayFor(modelItem => item.IsUpload)}
                        else
                        {
                            if (item.isEvidence)
                            {
                                string AttachID = "Attach" + @item.IndicatorID;
                            <input type="file" multiple name="Attachment" id=@item.IndicatorID /> }
                            else
                            {
                                <input type="checkbox" id=@item.IndicatorID />
                            }
                        }
                        }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfUpload)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.isEvidence)
                </td>

                <td>
                    <input type="submit" value="Save" class="kk btn btn-primary"  onclick="submit_by_Script(this,@item.IndicatorID, @item.SchoolID,@item.isEvidence.ToString().ToLower())" />

                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>

