@model Tuple< IEnumerable<BES.Areas.LMS.Models.EmpLeaveSummary>, BES.Areas.LMS.Models.LeaveRequest>

@section Styles {
    <link rel="stylesheet" href="~/libs/datatables/css/dataTables.bootstrap.min.css">
