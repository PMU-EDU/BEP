<div style="margin:15px 15px 0 15px">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Steps of @Model.Select(a => a.Activity.Name).FirstOrDefault() </h5>

                    <div class="ibox-tools">
                        @{
                            if (ViewBag.IsReachedLast == false)
                            {
                                @Html.ActionLink("Add Next Step", "Create", new { id = @ViewBag.ActivityID }, new { @class = "btn btn-primary btn-xs" })

                            }
                        }


                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Step.SerailNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Step.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PlannedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ActualDate)
                            </th>
                            <th>Update</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Step.SerailNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Step.Name)
                                </td>
                                @{
                                    if (item.NotApplicable == false)
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PlannedDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ActualDate)
                                        </td>
                                    }
                                    else
                                    {
                                        <td><text>N/A</text></td>
                                        <td><text>N/A</text></td>
                                    }
                                }
                                        <td>
                                            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-primary btn-sm"})*@
                                            @*@Html.ActionLink("Edit", "Edit", new { ActivityID = item.ActivityID, StepID = item.StepID }, new { @class = "btn btn-primary btn-sm" })*@
                                            <a href='@Url.Action("Edit", "ActivityDetails", new { ActivityID = item.ActivityID, StepID = item.StepID })'>
                                                <img src='@Url.Content("~/images/edit.png")' width="25" height="25" />
                                            </a>
                                            @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-white btn-sm"})*@
                                        </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



