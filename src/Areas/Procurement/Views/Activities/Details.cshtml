                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Item1.ElementAt(0).Step.SerailNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Item1.ElementAt(0).Step.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Item1.ElementAt(0).PlannedDate)
