                                    if (item.Attachment != null)
                                    {
                                        <td>
                                            <a href='@Url.Content(item.Attachment)' target="_blank">
                                                View Evidence
                                            </a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <text>No Attachment</text>
                                        </td>
                                    }
                                }
                                <td>@item.EstimatedCost</td>
                                @{
                                    if (item.ActualCost == null)
                                    {
                                        <td style="color:brown">Pending</td>
